<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.Dao.ActivityDao">
    <resultMap id="ActivityMap" type="com.example.demo.Model.Activity">
        <id column="actid" jdbcType="BIGINT" property="actid"/>
        <result column="aid" jdbcType="BIGINT" property="aid"/>
        <result column="actname" jdbcType="VARCHAR" property="actname"/>
        <result column="time" jdbcType="BIGINT" property="time"/>
        <result column="spenttime" jdbcType="BIGINT" property="spenttime"/>
        <result column="usedate" jdbcType="VARCHAR" property="usedate"/>
        <result column="aname" jdbcType="VARCHAR" property="aname"/>
    </resultMap>
    <delete id="deleteByActid" parameterType="long">
    DELETE FROM activity where actid = #{actid}
</delete>
    <insert id="insertActivity" parameterType="Activity">
        INSERT INTO activity(actid, aid, actname, time, spenttime, usedate，aname)Values(#{actid}, #{aid}, #{actname}, #{time}, #{spenttime}, #{usedate}，#{aname})
    </insert>

    <select id="searchByAname" resultMap="ActivityMap">
        select * from `activity`
        where aname = #{aname}
    </select>
</mapper>